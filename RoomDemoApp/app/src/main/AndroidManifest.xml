<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.descifrador.roomdemoapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RoomDemoApp">
        <activity android:name=".view.activity.AddUpdateDishActivity"
            android:label="Add Dish"
            android:theme="@style/Theme.RoomDemoApp.NoActionBar"
            android:configChanges="orientation"></activity>
        <activity
            android:name=".view.activity.MainActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".view.activity.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.RoomDemoApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>